@model TranVanDuc_2122110512.Context.Category

@{
    ViewBag.Title = "Delete";
}

<div class="content-wrapper">
    <h3>Bạn có chắc chắn muốn xóa?</h3>
    <div>
        <h4>Danh mục</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Parent_Id)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Parent_Id)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd>
                @if (Model.Image != null)
                {
                    <img src="~/Content/images/categories/@Model.Image" alt="Danh mục hình ảnh" style="width:150px" />
                }
                else
                {
                    <span>Chưa có hình ảnh</span>
                }
            </dd>
        </dl>

        @using (Html.BeginForm("Delete", "CategoryAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-default" /> |
                @Html.ActionLink("Quay lại", "Index")
            </div>
        }
    </div>
</div>
