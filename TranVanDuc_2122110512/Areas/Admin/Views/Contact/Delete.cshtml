@model TranVanDuc_2122110512.Context.Contact

@{
    ViewBag.Title = "Xóa liên hệ";
}

<div class="content-wrapper">
    <div>
        <h4>Xác nhận xóa</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Name)</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>

            <dt>@Html.DisplayNameFor(model => model.Email)</dt>
            <dd>@Html.DisplayFor(model => model.Email)</dd>

            <dt>@Html.DisplayNameFor(model => model.User_id)</dt>
            <dd>@Html.DisplayFor(model => model.User_id)</dd>
        </dl>
    </div>

    @using (Html.BeginForm("Delete", "Contact", FormMethod.Post, new { id = Model.Id }))
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
    }
</div>
