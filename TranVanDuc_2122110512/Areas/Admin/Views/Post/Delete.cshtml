@model TranVanDuc_2122110512.Context.Post

@{
    ViewBag.Title = "Delete";
}

<div class="content-wrapper">
    <h3>Bạn có chắc chắn muốn xóa không?</h3>
    <div>
        <h4>Bài viết</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Content)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Content)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </dt>
            <dd>
                @if (Model.ImageUrl != null)
                {
                    <img src="~/Content/images/posts/@Model.ImageUrl" alt="Hình ảnh không có" style="width:150px" />
                }
                else
                {
                    <p>Không có hình ảnh</p>
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
        </dl>

        @using (Html.BeginForm("Delete", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.PostId) <!-- Thêm HiddenFor để gửi PostId khi xóa -->

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-default" /> |
                @Html.ActionLink("Quay lại", "Index")
            </div>
        }
    </div>
</div>
